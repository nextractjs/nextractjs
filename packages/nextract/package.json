{
  "name": "nextract",
  "version": "3.2.4",
  "license": "MIT",
  "description": "The easiest analytics tool for Next.js: Privacy-friendly, forever free, easily self hosted.",
  "repository": "https://github.com/nextractjs/nextractjs.git",
  "author": "SÃ¶nke Peters <soenke@soenkep.com>",
  "keywords": [
    "react",
    "next",
    "nextjs",
    "analytics",
    "statistics",
    "monitoring",
    "tracking",
    "pageview",
    "nextract"
  ],
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "access": "public",
  "exports": {
    ".": "./index.js",
    "./api/types": "./api/types.js",
    "./api/database": "./api/database.js",
    "./client": "./client/index.js",
    "./client/types": "./client/types.js",
    "./tailwind.config": "./tailwind.config"
  },
  "scripts": {
    "clean": "rm -rf api client css index.d.ts index.js logger.d.ts logger.js",
    "build": "yarn clean && yarn build:types && yarn build:js && ts-node scripts/build-css.ts",
    "build:js": "babel src --out-dir . --extensions \".ts,.tsx,.js\"",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "yarn build && npm-run-all --parallel dev:types dev:js",
    "dev:types": "tsc --watch --preserveWatchOutput",
    "dev:js": "yarn run build:js --watch",
    "test": "jest --verbose --env=node --testPathIgnorePatterns **/client/**/*.test.ts && jest --verbose --env=jsdom --testMatch=**/client/**/*.test.ts",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint ."
  },
  "files": [
    "api",
    "client",
    "css",
    "index.d.ts",
    "index.js",
    "logger.d.ts",
    "logger.js",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@headlessui/react": "^1.6.1",
    "iron-session": "^6.1.3",
    "recharts": "^2.1.9",
    "request-ip": "^2.1.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.12",
    "@babel/plugin-transform-runtime": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^27.5.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/request-ip": "0.0.37",
    "@types/uuid": "^8.3.4",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "next": "^12.1.6",
    "node-mocks-http": "^1.11.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.4.13",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^28.0.2"
  },
  "peerDependencies": {
    "next": "^12.1.6",
    "react": "^18.1.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    }
  },
  "eslintIgnore": [
    "./*.d.ts",
    "**/tests"
  ]
}
